{
  "appId": "com.cmangos.cms",
  "productName": "CMAnGOS CMS",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "../CMAnGOS-CMS-API.Server/bin/Release/net8.0/publish",
      "to": "backend",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      "nsis",
      "portable"
    ]
  },
  "mac": {
    "target": [
      "dmg",
      "zip"
    ],
    "category": "public.app-category.utilities"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
